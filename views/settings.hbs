<div id="settingsPage-area">
    <div id="settings-header">
        <h2 style="font-size: 1.5rem; margin-bottom: 0; margin-top: 30px;">Settings</h2>
    </div>
    <div id="settings-options">
        <h2 class="setting-name">Language translation</h2>
        <p>Description and examples will be in this language</p>
        <div id="language-options">
            <span class="settings-language" onclick="languageChange(this)">English</span>
            <span class="settings-language" onclick="languageChange(this)">Ukrainian</span>
        </div>
        <h2 class="setting-name">Blind Mode</h2>
        <p>Hides description</p>
        <div id="description-options">
            <span class="settings-description" onclick="descriptionView(this)">On</span>
            <span class="settings-description" onclick="descriptionView(this)">Off</span>
        </div>
    </div>
</div>